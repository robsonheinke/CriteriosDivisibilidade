<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="-1dp"
        android:id="@+id/tabela">

        <TableRow>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/circulos"
                android:backgroundTint="#C71585"
                android:text="2"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/circulos"
                android:backgroundTint="#1E90FF"
                android:text="3"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/circulos"
                android:backgroundTint="#228B22"
                android:text="4"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/circulos"
                android:backgroundTint="#8B008B"
                android:text="5"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/circulos"
                android:backgroundTint="#B22222"
                android:text="6"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/circulos"
                android:backgroundTint="#0000CD"
                android:text="7"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/circulos"
                android:backgroundTint="#FFD700"
                android:text="8"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/circulos"
                android:backgroundTint="#C0C0C0"
                android:text="9"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/circulos"
                android:backgroundTint="#FF4500"
                android:text="10"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabela"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-15dp">

        <TableRow
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="40dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/circulos"
                android:backgroundTint="#8B4513"
                android:text="11"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/circulos"
                android:backgroundTint="#98FB98"
                android:text="12"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </TableRow>

    </TableLayout>

</RelativeLayout>