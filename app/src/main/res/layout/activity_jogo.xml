<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_telas"
    tools:context="heinke.criteriosdivisibilidade.activity.JogoActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/TLcabecalho"
        android:gravity="center_horizontal">

        <TableRow
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/logo" />

            <RelativeLayout
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:id="@+id/RL_jogo">


                <TextView
                    android:id="@+id/txt_pontos"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:text="Pontuação"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/pontos"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/txt_pontos"
                    android:text="0"
                    android:gravity="center"
                    android:background="@drawable/fundo_telas"/>

                <TextView
                    android:id="@+id/txt_nivel"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txt_pontos"
                    android:layout_alignTop="@+id/txt_pontos"
                    android:text="Nível"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/nivel"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/pontos"
                    android:layout_alignTop="@+id/pontos"
                    android:text="0"
                    android:layout_below="@+id/txt_nivel"
                    android:gravity="center"
                    android:background="@drawable/fundo_telas"/>

                <TextView
                    android:id="@+id/txt_tempo"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txt_nivel"
                    android:layout_alignTop="@+id/txt_nivel"
                    android:text="Tempo"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tempo"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/nivel"
                    android:layout_alignTop="@+id/nivel"
                    android:gravity="center"
                    android:background="@drawable/fundo_telas"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_usuario"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/com_facebook_button_icon_blue" />

        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/TLcabecalho"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:layout_centerHorizontal="true">
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ordem_nivel"
            android:text="ordem a ser executada no nivel"
            android:gravity="center"
            android:textSize="12dp"/>

    </RelativeLayout>

    <TableLayout
        android:layout_marginTop="170dp"
        android:layout_width="350dp"
        android:layout_height="340dp"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_margin="5dp"
            android:padding="2dp"
            android:gravity="center">
            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="01"
                android:id="@+id/posicao_01"
                android:gravity="center"
                android:textSize="12dp"/>

            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="02"
                android:id="@+id/posicao_02"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:textSize="12dp"/>

            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="03"
                android:id="@+id/posicao_03"
