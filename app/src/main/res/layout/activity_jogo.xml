                android:text="05"
                android:id="@+id/posicao_05"
                android:gravity="center"
                android:textSize="12dp"/>

            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="06"
                android:id="@+id/posicao_06"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:textSize="12dp"/>

            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="07"
                android:id="@+id/posicao_07"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:textSize="12dp"/>

            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="08"
                android:id="@+id/posicao_08"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:textSize="12dp"/>

        </TableRow>

        <TableRow
            android:layout_margin="5dp"
            android:padding="2dp"
            android:gravity="center">
            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="09"
                android:id="@+id/posicao_09"
                android:gravity="center"
                android:textSize="12dp"/>

            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="10"
                android:id="@+id/posicao_10"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:textSize="12dp"/>

            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="11"
                android:id="@+id/posicao_11"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:textSize="12dp"/>

            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="12"
                android:id="@+id/posicao_12"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:textSize="12dp"/>

        </TableRow>

        <TableRow
            android:layout_margin="5dp"
            android:padding="2dp"
            android:gravity="center">
            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="13"
                android:id="@+id/posicao_13"
                android:gravity="center"
                android:textSize="12dp"/>

            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="14"
                android:id="@+id/posicao_14"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:textSize="12dp"/>

            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="15"
                android:id="@+id/posicao_15"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:textSize="12dp"/>

            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="16"
                android:id="@+id/posicao_16"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:textSize="12dp"/>

        </TableRow>

        <TableRow
            android:layout_margin="5dp"
            android:padding="2dp"
            android:gravity="center">
            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="17"
                android:id="@+id/posicao_17"
                android:gravity="center"
                android:textSize="12dp"/>

            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="18"
                android:id="@+id/posicao_18"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:textSize="12dp"/>

            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="19"
                android:id="@+id/posicao_19"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:textSize="12dp"/>

            <Button
                android:background="@drawable/circulos"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:text="20"
                android:id="@+id/posicao_20"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:textSize="12dp"/>

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/desenvolvido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desenvolvido"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="540dp"
        />
</RelativeLayout>
