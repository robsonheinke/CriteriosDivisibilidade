<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_telas"
    tools:context="heinke.criteriosdivisibilidade.activity.AjudaActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/cabecalho"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ranking"
            android:textSize="80sp"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:shadowColor="#000"
            android:shadowDx="20"
            android:shadowDy="20"
            android:shadowRadius="12"
            android:padding="12dp"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:id="@+id/logo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/fundo_telas"
        android:layout_below="@+id/cabecalho"
        android:id="@+id/cab_tabela">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="POS"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="USUARIO"
            android:layout_marginTop="10dp"
            android:id="@+id/nome_usuario"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="NIVEL"
            android:layout_marginTop="10dp"
            android:id="@+id/nivel"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="PONTOS"
            android:id="@+id/pontos"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:textAlignment="center"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cab_tabela"
        android:id="@+id/list_item">

    </ListView>

</RelativeLayout>
