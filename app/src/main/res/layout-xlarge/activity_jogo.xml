<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_telas"
    android:orientation="vertical"
    tools:context="heinke.criteriosdivisibilidade.activity.JogoActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/TLcabecalho"
        android:gravity="center_horizontal">

        <TableRow
            android:layout_margin="15dp" >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/logo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:id="@+id/RL_jogo"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical|center_horizontal">


                <TextView
                    android:id="@+id/txt_pontos"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:text="Pontos"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/pontos"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/txt_pontos"
                    android:text="0"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/fundo_telas"/>

                <TextView
                    android:id="@+id/txt_nivel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txt_pontos"
                    android:layout_alignTop="@+id/txt_pontos"
                    android:text="NÃ­vel"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/nivel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/pontos"
                    android:layout_alignTop="@+id/pontos"
                    android:text="0"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/txt_nivel"
                    android:gravity="center"
                    android:background="@drawable/fundo_telas"/>

                <TextView
                    android:id="@+id/txt_tempo"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/txt_nivel"
                    android:layout_alignTop="@+id/txt_nivel"
                    android:text="Tempo"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tempo"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/nivel"
                    android:layout_alignTop="@+id/nivel"
                    android:gravity="center"
                    android:text="00:00"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:background="@drawable/fundo_telas"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_usuario"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/com_facebook_button_icon_blue" />

        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/TLcabecalho"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:layout_centerHorizontal="true">
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ordem_nivel"
            android:text="ordem a ser executada no nivel"
            android:gravity="center"
            android:textSize="20dp"/>

    </RelativeLayout>

    <TableLayout
