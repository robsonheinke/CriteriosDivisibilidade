<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_telas"
    tools:context="heinke.criteriosdivisibilidade.activity.CriteriosIndividualActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/cabecalho"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajuda"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:shadowColor="#000"
            android:shadowDx="20"
            android:shadowDy="20"
            android:shadowRadius="12"
            android:padding="1dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logo"
            android:id="@+id/logo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_cabecalho_ajuda"
        android:layout_below="@+id/cabecalho"
        android:id="@+id/interação">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/livros"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:text="Como Jogar"
            android:background="@null"
            android:textAllCaps="false"
            android:textSize="6dp"
            android:id="@+id/ajuda"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/regras"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="Criterios de\ndivisibilidade"
            android:textAllCaps="false"
            android:background="@null"
            android:layout_marginTop="-5dp"
            android:textSize="6dp"
            android:id="@+id/criterios"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_below="@+id/interação"
        android:id="@+id/menuInteracao"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:id="@+id/voltar"
            android:background="@drawable/voltar" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circulos"
            android:id="@+id/regraCriterios"
            android:layout_marginLeft="30dp"
            android:text="11"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:id="@+id/avancar"
            android:background="@drawable/avancar"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/div11"
        android:textSize="6dp"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_below="@+id/menuInteracao"
        android:id="@+id/regra"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regra"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="15dp"
                android:textSize="8dp"
                android:textAlignment="center"
                android:id="@+id/exUm"
                android:layout_marginTop="1dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:id="@+id/imgUm"
                android:layout_marginTop="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="140dp"
                android:layout_height="15dp"
                android:textSize="8dp"
                android:textAlignment="center"
                android:id="@+id/exDois"
                android:layout_marginTop="1dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/imgDois"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="140dp"
                android:layout_height="15dp"
                android:textSize="8dp"
                android:textAlignment="center"
                android:id="@+id/exTres"
                android:layout_marginTop="1dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/imgTres"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
