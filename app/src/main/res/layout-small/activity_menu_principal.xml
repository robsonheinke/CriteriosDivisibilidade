<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_telas"
    android:orientation="vertical"
    tools:context="heinke.criteriosdivisibilidade.activity.MenuPrincipal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:id="@+id/usuario">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/fb_img"
            android:src="@drawable/logo"
            android:layout_margin="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/nome_usuario"
            android:text="nomeUsuario"
            />

    </LinearLayout>


    <ImageView
        android:id="@+id/logo_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/nome_jogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/nomeJogo"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/jogar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp"
        android:textSize="10dp"
        android:textStyle="bold"
        android:background="@drawable/bordas_arredondadas"
        android:text="Jogar" />

    <Button
        android:id="@+id/ranking"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp"
        android:textSize="10dp"
        android:textStyle="bold"
        android:background="@drawable/bordas_arredondadas"
        android:text="Ranking" />

    <Button
        android:id="@+id/ajuda"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp"
        android:textSize="10dp"
        android:textStyle="bold"
        android:background="@drawable/bordas_arredondadas"
        android:text="Ajuda" />

    <TextView
        android:id="@+id/desenvolvido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Desenvolvido por Robson Heinke"
        android:textSize="5dp"
        android:layout_gravity="center"
        />
</LinearLayout>
